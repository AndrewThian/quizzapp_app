<ul class="breadcrumb">
  <li><%= link_to 'Home',root_path %></li>
  <li><span class="black-text">Profile</span></li>
</ul>

<h1><%= current_user.name %></h1>

<div class="row">

  <div class="col s5 m5">
    <div class="card">
      <div class="card-image">
        <%= image_tag("background.jpg") %>
      </div>
      <div class="card-content">
        <span class="card-title">Global stats:</span>
        <table>
          <thead>
            <tr>
              <th>Total completed questions:</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <div class="progress" id="overall_question_progress" data-com-qn="<%= @all_completed_qns_by_user.length %>">
                  <div class="determinate" style="width: 100%"></div>
                </div>
              </td>
              <td id="percentage-done"><%= @all_completed_qns_by_user.length %></td>
            </tr>
          </tbody>
        </table>
        <div id="divider"></div>
        <table>
          <thead>
            <tr>
              <th>Total exp gained:</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @exp_sum %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col s7 m7">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Your Topics:</span>
        <div id="show_user_topics">
          <% @user_category.each do |cat| %>
            <div id="img_container" class="z-depth-1">
              <%= image_tag(cat.category.icon_source) %>
              <div class="align-center">
                <%= link_to category_path(cat.category.id) do %>
                  <p id="category_name"><%= cat.category.name %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="divider"></div>
        <span class="card-title">Overall levels:</span>
        <ul class="tabs">
          <li class="tab" id="chart_button"><a class="active">Chart View</a></li>
          <li class="tab" id="list_button"><a>List View</a></li>
        </ul>
        <div class="divider"></div>
        <div id="donutchart"></div>
        <div id="stats_table">
          <table class="centered"  data-user-id="<%= current_user.id %>">
            <thead>
              <tr>
                <th>Category Exp:</th>
                <th>Highscore:</th>
                <th>Category Name:</th>
              </tr>
            </thead>
            <tbody>
              <% @user_category.each do |user_cat| %>
                <tr class="highscore_table">
                  <td><%= user_cat.category_exp %></td>
                  <td><%= user_cat.highscore %></td>
                  <td><%= user_cat.category.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
</script>
